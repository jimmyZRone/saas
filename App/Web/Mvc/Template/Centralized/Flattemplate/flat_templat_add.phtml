<!--集中式公寓-添加模板 s-->
<div class="centralized_add_mode view" hasform="true">
	<div class="view-head">
		<h1>模板信息</h1>
		<b>[{{$flat_data.flat_name}}]</b>
	</div>
	<div class="view-con">
		<ul>
			<li><b> <i class="bit">*</i> 模板名称：
			</b> <input type="text" class="ipt ipt-200 template_name" datatype="*,string40" nullmsg="请输入模板名称" errormsg = "模板名称不能超过40个字符"/><span class="check-error check-error-ts"></span></li>
			<li><b> <i class="bit">*</i> 房间租金：
			</b> <input type="text" class="ipt ipt-160 rent_money" datatype="rentmoney" nullmsg="请输入房间租金" errormsg="房间租金格式不正确"/> <span class="ml5">元/月</span>
				<b class="dte-60"> <i class="bit">*</i> 房间户型：
			</b>
				<div class="selectByM">
					<input type="text" class="selectByMT centralized_Ind_CuteType room_type"
						readonly='readonly' selectVal='' value="请选择房间户型" datatype="chooseGroup" choosenull="请选择房间户型"/> <span
						class='jt_Ctr'><span class='jt_box'></span></span>
					<div class="selectByMO">
						<ul>
							{{foreach from=$room_type key=tkey item=tval}}
								<li selectVal='{{$tkey}}'>{{$tval}}</li>
							{{/foreach}}
						</ul>
					</div>
				</div><span class="check-error check-error-ts"></span></li>
			<li><b> <i class="bit">*</i> 押付方式：
			</b> <span class="mr10">押</span>
				<div class="selectByM slt-70 mr10">
					<input type="text" class="selectByMT centralized_Ind_CuteType_Ya"
						readonly='readonly' selectVal='' value="几" datatype="chooseGroup" choosenull="请选择押几"/> <span
						class='jt_Ctr'><span class='jt_box'></span></span>
					<div class="selectByMO">
						<ul>
							<li selectVal='0'>零</li>
							<li selectVal='1'>一</li>
							<li selectVal='2'>二</li>
							<li selectVal='3'>三</li>
							<li selectVal='4'>四</li>
							<li selectVal='6'>五</li>
							<li selectVal='6'>六</li>
							<li selectVal='7'>七</li>
							<li selectVal='8'>八</li>
							<li selectVal='9'>九</li>
							<li selectVal='10'>十</li>
							<li selectVal='11'>十一</li>
							<li selectVal='12'>十二</li>
						</ul>
					</div>
				</div> <span class="mr10">付</span>
				<div class="selectByM slt-70">
					<input type="text" class="selectByMT centralized_Ind_CuteType_Fu"
						readonly='readonly' selectVal='' value="几"  datatype="chooseGroup" choosenull="请选择付几"/> <span
						class='jt_Ctr'><span class='jt_box'></span></span>
					<div class="selectByMO">
						<ul>
							<li selectVal='1'>一</li>
							<li selectVal='2'>二</li>
							<li selectVal='3'>三</li>
							<li selectVal='4'>四</li>
							<li selectVal='6'>五</li>
							<li selectVal='6'>六</li>
							<li selectVal='7'>七</li>
							<li selectVal='8'>八</li>
							<li selectVal='9'>九</li>
							<li selectVal='10'>十</li>
							<li selectVal='11'>十一</li>
							<li selectVal='12'>十二</li>
						</ul>
					</div>
				</div> <b class="dte-60"> <i class="bit">*</i> 房间面积：
			</b> <input type="text" class="ipt ipt-160 room_area" datatype = "float,gt0,lt999" nullmsg="请输入房间面积" errormsg = "房间面积应为整数或小数"/> <span class="ml5">平米</span><span class="check-error check-error-ts"></span>
			</li>
			<li class="view-config"><b><i class="bit"></i>房间配置：</b>
				<div class="house-config">
					{{foreach from=$public_facilities key=fk item=fv}}
					<div class="check-box check-box-singel {{if $fv eq "飘窗" or $fv eq "阳台" or $fv eq "卫生间"}}canntchoose{{/if}}">
						<label><span class="choose ifont1">&#xe60c;</span></label> <input name="centralized_add_house_room_config" type="checkbox" value="{{$fk}}" /> <span><a href="javascript:;">{{$fv}}</a></span>
					</div>
					{{/foreach}}
					<div class="check-box check-box-all">
						<label class="checkAll"><i class="choose ifont1">&#xe60c;</i></label>
						<span class="select-all"><a href="javascript:;">全选</a></span>
					</div>
					<div class="check-box roomconfig_diy">
						<a href="javascript:;" class="roomconfig_dy">自定义房间配置</a>
					</div>
					<div class="roomconfig-diy-txt">
						<div class="roomconfig-diy-txt-a">
							<ul>
								<li><label class='checkbox'><span class='choose ifont1'>&#xe60c;</span></label><a href="javascript:;">全选</a></li>
								<li><a url="{{'Company/addconfig'|url}}" href="javascript:;" class="config-auto-add">新增配置</a></li>
								<li><a href="javascript:;" url="{{'Company/deleteconfig'|url}}" class="config-auto-deleteall">删除配置</a></li>
								<li><a href="javascript:;" class="config-auto-submit">保存配置</a></li>
							</ul>
						</div>
						<ul class="roomconfig-diy-txt-auto">
							
						</ul>
					</div>
				</div></li>
			<li style="margin-bottom: 0;"><b style="margin-bottom: 0;"><i class="bit"></i>房间图片：</b><i class="notice-auto" style="color: red;margin-bottom: 0;">（建议上传真实、美观的房间图片，要求：jpg、gif、png格式，最多上传9张）</i></li>
			<li class="view-img">
				<div class="uploader-area" id="js-uploaderArea">
					<div class="uploadview-wrapper">
						<div class="upload-group">
							<div id="queue"></div>
							<input id="file_upload" name="file_upload" type="file">
						</div>
					</div>
				</div>
			</li>
			<li class="view-txt"><b><i class="bit"></i>备注说明：</b> <textarea
					class="i-txt"></textarea></li>
			<li class="list-box"><b style="line-height: 32px;" class="fl">已配置房间：</b><i class="fl" style="display: block;float: left;height: 32px; margin-bottom: 20px;color: red;">点击该按钮可以复制模板数据到所选房间</i>
				<div class="house-list fl" style="margin-left: 95px;clear: both;">
					<ul>
						<li class="config-house"><a href="javascript:;" url="#{{'Centralized-FlatTemplate/configroom'|url}}" class="goHouseConfig">配置房间</a></li>
						<!--<li><a href="javascript:;">102-A</a> <a href="javascript:;"
							class="ifont">&#xe627;</a></li>-->
						<!--当配置房间不只当前页时，换一批才可点击-->
						<li class="config-house" style="display: none"><a href="javascript:;" url="{{'Centralized-FlatTemplate/update'|url}}" class="exchangeTenplateConfigRooms">换一批</a></li>
						<!--当配置房间不只当前页时，换一批才可点击-->
					</ul>
				</div></li>
		</ul>
	</div>

	<div class="view-btn">
		<a href="javascript:;" url="{{'Centralized-FlatTemplate/add'|url}}" class="btn btn2">保存</a> <a href="javascript:;" class="btn btn4 btn-cancel">取消</a>
		<div class="check-box">
			<label class="checked"><span style="display: inline;" class="choose ifont1">&#xe60c;</span></label> <input name="updata_room" checked="checked" type="checkbox"/> <span>更新房间</span>
		</div>
	</div>
</div>
